- unless @posts.blank?
  %ul
    - posts = @posts.group_by{ |item| item.created_at.to_date }
    - posts.each do |date, list|
      .day-wise
        %h2= date.strftime("%A, %d %B %Y")
        - list.each do |post|
          %li
            .post-outer
              %h5
                = link_to post.title.titleize, post_show_path(yy: post.created_at.strftime("%Y"), mm: post.created_at.strftime("%m"), id: post.title.downcase.gsub(" ", "-"))
              %p
                = post.content.html_safe
              %br
              %p
                Posted by
                = link_to post.user.full_name, "#"
                at
                = post.created_at.strftime("%H:%M")
                &nbsp;&nbsp;&nbsp;
                = render 'post', post: post
                =# link_to pluralize(post.comments.size, 'comments'), post_show_path(yy: post.created_at.strftime("%Y"), mm: post.created_at.strftime("%m"), id: post.title.gsub(" ", "-"))
              - if current_admin_user
                .links
                  = link_to "Edit", edit_admin_post_path(post)
                  |
                  = link_to "Delete", post_path(post.title.parameterize), data: { confirm: 'Are you sure?' }, method: :delete
- else
  No posts found
